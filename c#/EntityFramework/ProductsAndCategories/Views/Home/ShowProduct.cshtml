@model ViewModel
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item" aria-current="page"><a href="/products">Products</a></li>
    <li class="breadcrumb-item" aria-current="page"><a href="/categories">Categories</a></li>
  </ol>
</nav>
<div class="jumbotron">
    <h1 class="display-4 text-center">@Model.ViewProduct.Name</h1>
    <hr class="my-4">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h3>Categories</h3>
                <ul>
                    @{
                        foreach(var cat in Model.ViewProduct.ProductCategories)
                        {
                            <li>@cat.Category.Name</li>
                        }
                    }
                </ul>
            </div>
            <div class="col text-center">
                <h3>Add a Category</h3>
                <form action="/products/addcategory" method="post">
                    <div class="form-group col-10 offset-2">
                        <label asp-for="NewAssociation.CategoryId"></label>
                        <select asp-for="NewAssociation.CategoryId" class="form-control">
                        @{
                            foreach(Category category in Model.AllCategories)
                            {
                                <option value="@category.CategoryId">@category.Name</option>
                            }
                        }
                        </select>
                    </div>
                    <button class="btn btn-outline-info offset-8" type="submit">Add Category</button>
                    <input asp-for="NewAssociation.ProductId" type="hidden" value="@Model.ViewProduct.ProductId">
                </form>
            </div>
        </div>
    </div>
</div>