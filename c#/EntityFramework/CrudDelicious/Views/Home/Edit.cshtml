@model CrudDelicious.Models.Dish;

<div class="jumbotron">
    <h1 class="display-4 text-center">Edit Dish</h1>
    <p class="text-center">
        <a class="btn btn-info btn" href="/" role="button">Home</a>
        <a class="btn btn-info btn" href="/view/@Model.DishID" role="button">Back</a>
    </p>
    <hr class="my-4">
    <form class="container offset-2" asp-action="UpdateDish" asp-controller="Home" method="POST">
        <div class="form-group">
          <label asp-for="Chef"></label>
          <input asp-for="Chef" type="text" class="form-control col-8" value="@Model.Chef">
          <span asp-validation-for="Chef" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Name"></label>
          <input asp-for="Name" class="form-control col-8" value="@Model.Name">
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Calories"></label>
          <input asp-for="Calories" class="form-control col-8" value="@Model.Calories">
          <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label asp-for="Tastiness"></label>
          <select asp-for="Tastiness" class="form-control col-1" value="@Model.Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </div>
        <div class="form-group">
          <label asp-for="Description"></label>
          <textarea asp-for="Description" class="form-control col-8" rows="3">@Model.Description</textarea>
          <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button class="btn btn-info" type="submit">Update Dish</button>
    </form>