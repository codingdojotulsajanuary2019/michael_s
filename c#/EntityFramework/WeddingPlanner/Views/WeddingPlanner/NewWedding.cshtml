@model WeddingViewModel
    <div class="navbar navbar-dark text-white">
        <!-- Navbar content -->
        <h1 class="offset-4">Plan Your Wedding</h1>
        <a class="btn btn-outline-info offset-2" href="/dashboard" role="button">Dashboard</a>
        <a class="btn btn-outline-info" href="/logout" role="button">Logout</a>
    </div>
    <div class="jumbotron col-9 container">
        <h1 class="display-4 text-center">Create New Wedding</h1>
        <hr class="my-4">
        <form action="/wedding/new/create" method="post">
            <div class="form-group col-8">
                <label asp-for="NewWedding.Wedder1">Wedder1</label>
                <input asp-for="NewWedding.Wedder1" class="form-control" placeholder="Bride/Groom Name">
            </div>
            <div class="form-group col-8">
                <label asp-for="NewWedding.Wedder2">Wedder2</label>
                <input asp-for="NewWedding.Wedder2" class="form-control" placeholder="Bride/Groom Name">
            </div>
            <div class="form-group col-8">
                <label asp-for="NewWedding.Date">Date</label>
                <input asp-for="NewWedding.Date" type="date" class="form-control">
            </div>
            <div class="form-group col-8">
                <label asp-for="NewWedding.Location">Address</label>
                <input asp-for="NewWedding.Location" class="form-control" placeholder="Adress">
            </div>
            <input type="hidden" value="@ViewBag.UserId" asp-for="NewWedding.UserId">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
