@model DojoSurveyWithModels.Models.Survey

<div class="jumbotron">
  <h1 class="display-4">Dojo Survey</h1>
    <form asp-action="Submit" asp-controller="Home" method="POST">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" id="Name" aria-describedby="Name" placeholder="Enter Your Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location">Location</label>
            <select asp-for="Location" class="form-control" id="Location">
                <option value="Tulsa">Tulsa</option>
                <option value="San Jose">San Jose</option>
                <option value="Silicon Valley">Silicon Valley</option>
                <option value="Seatle" >Seatle</option>
                <option value="Dallas">Dallas</option>
            </select>
            <span asp-validation-for="Location"></span>
        </div>
        <div class="form-group">
            <label asp-for="Language">Favorite Language</label>
            <select asp-for="Language" class="form-control" id="exampleFormControlSelect1">
                <option value="Python">Python</option>
                <option value="C#">C#</option>
                <option value="JavaScript">JavaScript</option>
                <option value="TypeScript">TypeScript</option>
                <option value="HTML">HTML</option>
            </select>
            <span asp-validation-for="Language"></span>
        </div>
        <div class="form-group">
            <label asp-for="Comments">Comments</label>
            <textarea asp-for="Comments" class="form-control" id="Comments" rows="3" placeholder="Your Comments"></textarea>
            <span asp-validation-for="Comments"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form> 
</div>