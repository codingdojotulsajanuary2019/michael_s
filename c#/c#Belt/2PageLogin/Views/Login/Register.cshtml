@model LoginViewModel

<div class="container">

    <!-- REGISTRATION -->

    <div class="jumbotron col-6 bg-transparent text-white">
        <h1 class="text-left">Register</h1>
        <small>Already Registered? <span><a href="/login">Login Here</a></span> </small>
        <form action="/register" method="post">
            <div class="form-group">
                <label asp-for="User.FirstName"></label>
                <input asp-for="User.FirstName" class="form-control col-10" placeholder="First Name">
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.LastName"></label>
                <input asp-for="User.LastName" class="form-control col-10" placeholder="Last Name">
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email"></label>
                <input asp-for="User.Email" class="form-control col-10" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password"></label>
                <input asp-for="User.Password" class="form-control col-10" type="password" placeholder="Password">
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PWConfirm"></label>
                <input asp-for="User.PWConfirm" class="form-control col-10 border rounded"  type="password" placeholder="Password">
                <span asp-validation-for="User.PWConfirm" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Sign Up!</button>
        </form>
    </div>

</div>